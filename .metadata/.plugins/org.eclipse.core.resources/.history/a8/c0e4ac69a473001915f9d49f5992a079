package introduction;

import java.net.MalformedURLException;

import org.openqa.selenium.Keys;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.interactions.touch.TouchActions;

import io.appium.java_client.TouchAction;
import static io.appium.java_client.touch.TapOptions.tapOptions;

import io.appium.java_client.android.AndroidDriver;
import io.appium.java_client.android.AndroidElement;
import io.appium.java_client.touch.offset.ElementOption;
import static io.appium.java_client.touch.offset.ElementOption.element;

public class gestures extends base {

	public static void main(String[] args) throws MalformedURLException {
		// TODO Auto-generated method stub

		AndroidDriver<AndroidElement> driver = capabilities();
		WebElement xplandable=driver.findElementByXPath("//android.widget.TextView[@text='Accessibility']");
		
		for (int i=0;i<10;i++)
		{
			System.out.println("Hello");

			xplandable.sendKeys(Keys.ARROW_DOWN);
		}
		
		
	
		TouchAction t=new TouchAction(driver);
		TouchActions action = new TouchActions(driver);
		action.scroll(xplandable, 10, 100);
		action.perform();

		driver.findElementByXPath("//android.widget.TextView[@text='view']").click();

		


		//t.tap(tapOptions().withElement(element(xplandable))).perform();
		
	}


	}

