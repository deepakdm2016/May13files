		driver.findElementByAndroidUIAutomator(new UiScrollable(new UISelector())
		WebElement xplandable=driver.findElementByXPath("//android.widget.TextView[@text='Accessibility']");
		
		
		
	
		TouchAction t=new TouchAction(driver);
		

		driver.findElementByXPath("//android.widget.TextView[@text='view']").click();

		


		//t.tap(tapOptions().withElement(element(xplandable))).perform();
		
